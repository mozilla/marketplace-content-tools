@import '../lib'


.addon-for-listing
  align-items flex-start
  border-bottom 1px solid $color--border
  display flex
  margin 0
  padding $layout--list-padding 0

  &:first-child
    padding-top 0

  &:last-child
    border none
    padding-bottom 0

  h2
    font-size 20px
    font-weight 300
    margin 0 0 5px
    width 100%

  di
  li
    font-size 13px
    font-weight 300
    margin-top 3px

  > div
    flex 1

  .addon-icon
    margin-right 10px


.addon-for-listing-meta
  width 70%

  di
    display flex

  dt
    font-weight 500
    &:after
      content ':\a0'

  dd
    margin 0

  .addon--status-obsolete dd
    color $color--status-netural

  .addon--status-incomplete dd
  .addon--status-rejected dd
    color $color--status-problem

  .addon--status-pending dd
    color $color--status-waiting

  .addon--status-public dd
    color $color--status-public


.addon-for-listing-links
  text-align right
  width 25%
